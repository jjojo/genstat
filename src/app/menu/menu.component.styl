@import 'jeet'

//Should be moved into master-css file
h2
	font-weight 400
	font-size 2.0em
	color white
	margin: 0
	padding: 15px
	
ul
	list-style: none
	padding: 0
	margin: 0

li
	for row in 1 2 3 4 5
		&:nth-child({row})
			border-bottom 2px solid #eee
			&:hover
				background-color #368779
				cursor: pointer

a 
	text-decoration: none

.menu
	top: 0;
	position: absolute;
	right: 0;
	bottom 0
	span(1/4)
	min-height: 100%;
	background-color: #4abdac
	float right
	box-shadow: 2px 0px 5px 2px black;
	-webkit-transition: width 1s ease; /* For Safari 3.1 to 6.0 */
	transition: width 1s ease;
	overflow-x: hidden;

.min-menu
	width 5%
