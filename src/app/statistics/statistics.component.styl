@import '../../../node_modules/jeet/stylus/jeet/index.styl'
@require '../../../node_modules/rupture/rupture/index.styl'
@require '../../assets/css/variables'

.wrapper
	span(1)
	margin-bottom: 12%
	h2
		center(100%,pad:5%)

	h3
		margin-bottom: 0
		text-align: center

	.get-statistics
		shift(70/100)
		column(1/4)
		margin-top: -5%
		+tablet()
			unshift()
			stack()


	.chart
		shift(-1/4)
		column(2/3)
		margin-left: 3%
		+tablet()
			unshift()
			stack()
		+tablet(orientation:portrait)
			margin-top: 5% !important

	share-buttons
		span(2/3)
		margin-left: 3%
		margin-top -15px

	menu
		span(1/3)
		margin-left -3%
		margin-top 0%

	&:nth-child(1)
		/deep/
			.form-control
				border-color econ-blue
			.submit-btn
				border 2px solid econ-blue
			.active
				background-color: econ-blue !important
	&:nth-child(2)
		/deep/
			.form-control
				border-color health-pink
			.submit-btn
				border 2px solid health-pink
			.active
				background-color: health-pink !important
	&:nth-child(3)
		/deep/
			.form-control
				border-color power-brown
			.submit-btn
				border 2px solid power-brown
			.active
				background-color: power-brown !important
	&:nth-child(4)
		/deep/
			.form-control
				border-color drugs-green
			.submit-btn
				border 2px solid drugs-green
			.active
				background-color: drugs-green !important
	&:nth-child(5)
		/deep/
			.form-control
				border-color family-orange
			.submit-btn
				border 2px solid family-orange
			.active
				background-color: family-orange !important
