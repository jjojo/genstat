@import 'jeet'
//edit()
@require '../../assets/css/variables'

.wrapper
	span(1)
	margin-bottom: 12%
	h2
		center(100%,pad:5%)
	
	h3
		margin-bottom: 0
		text-align: center
		
	
	.get-statistics
		column(1/4)
		margin-top: -5%
	
	.chart
		column(2/3)
		margin-left: 3%
	
	&:nth-child(1)
		/deep/ 
			.form-control
				border-color econ-blue
			button
				border 2px solid econ-blue
	&:nth-child(2)
		/deep/ 
			.form-control
				border-color health-pink
			button
				border 2px solid health-pink
			.active
				background-color: health-pink !important
				color white
	&:nth-child(3)
		/deep/ 
			.form-control
				border-color power-brown
			button
				border 2px solid power-brown
	&:nth-child(4)
		/deep/ 
			.form-control
				border-color drugs-green
			button
				border 2px solid drugs-green
	&:nth-child(5)
		/deep/ 
			.form-control
				border-color family-orange
			button
				border 2px solid family-orange
	
			
			