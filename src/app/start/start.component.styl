@import 'jeet'
@require '../../assets/css/variables'



.wrapper
	span(1)
	margin-bottom: 12%
	
	h1
		margin-top: 0
		padding-top: 7vh
		margin-bottom: 7vh
		text-align: center
	
	object
		center(100%,pad:5%)
		width: 30vw
		margin-bottom: 7vh
	
	.version-tag
		position: absolute
		left:0
		top 0
		padding: 0 10% 0 0
		margin: 0
		
	.subjects
		center(100%,pad:5%)
		text-align: center
	
	.subject
		height: 40vh;
		min-height: 300px;
		border: 1px solid #d2d2d2;
		box-shadow: 7px 7px 10px -11px black;
		border-radius: 4px;
		background-color: white;
		
		col(1/5, gutter: 1.5)

		color light-grey
		&:hover
			text-decoration: none
			color light-grey
			cursor: pointer
		p
			margin: 0px 30px
		h3
			margin-bottom: 8%
		&:nth-child(1)
			h3
				color econ-blue
		&:nth-child(2)
			h3
				color health-pink
		&:nth-child(3)
			h3
				color power-brown
		&:nth-child(4)
			h3
				color drugs-green
		&:nth-child(5)
			h3
				color family-orange
	